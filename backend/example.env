# Application settings
DEBUG=False
APP_NAME="Social Media Analysis Platform"
APP_VERSION="1.0.0"

# API settings
API_PREFIX="/api"
API_VERSION="v1"

# Security settings
SECRET_KEY="your-secure-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS settings
CORS_ALLOWED_ORIGINS="https://yourdomain.com,https://app.yourdomain.com"

# Host settings
ALLOWED_HOSTS="yourdomain.com,app.yourdomain.com"
TRUSTED_HOSTS="yourdomain.com,app.yourdomain.com"

# File upload settings
UPLOAD_DIR="uploads"
MAX_FILE_SIZE_MB=100

# Security component settings
CLAMAV_SOCKET_PATH="/var/run/clamav/clamd.sock"
CLAMAV_TIMEOUT=30
YARA_RULES_PATH="security/rules"
SECURITY_LOG_PATH="logs/security.log"

# Rate limiting
RATE_LIMIT_UPLOADS=10

# Database settings
DATABASE_URL="sqlite:///./app.db"
# For production, use PostgreSQL:
# DATABASE_URL="postgresql://user:password@localhost/dbname"

# AWS settings
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"

# Azure settings
AZURE_API_KEY="your-azure-api-key"
AZURE_ENDPOINT="https://your-azure-endpoint.com"

# Google Cloud settings
GOOGLE_CREDENTIALS_FILE="path/to/google-credentials.json"
